# 45telega Environment Configuration
# Copy this file to .env and fill in your values

# REQUIRED: Telegram API Credentials
# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# OPTIONAL: Phone number for initial authentication
# Format: +1234567890 (with country code)
TELEGRAM_PHONE=

# OPTIONAL: Session string for persistent authentication
# Generated after first login, allows skipping phone/code auth
TELEGRAM_SESSION_STRING=

# MCP Server Configuration
MCP_HOST=0.0.0.0
MCP_PORT=8765

# Logging Configuration
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Performance Tuning
WORKERS=4
MAX_CONNECTIONS=100
REQUEST_TIMEOUT=30
CONNECTION_RETRIES=3
RATE_LIMIT_MESSAGES=30
RATE_LIMIT_WINDOW=60

# Security Settings
ENABLE_ENCRYPTION=true
SESSION_TIMEOUT=86400
MAX_SESSION_AGE=2592000

# Redis Cache (optional)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Monitoring (optional)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
SENTRY_DSN=

# File Storage
DATA_DIR=/data
LOG_DIR=/logs
SESSION_DIR=/home/telega/.local/state/mcp-telegram

# Debug Mode (development only)
DEBUG=false
VERBOSE=false